{
    "name": "@swapnet-protocol/contracts",
    "version": "0.0.1",
    "description": "Smart contracts for the Swapnet Lite system",
    "author": "Jeff Wu <jeff@swapnet.finance>",
    "scripts": {
        "compile": "solium -d contracts && npx buidler compile",
        "build": "npm run compile && npx buidler typechain",
        "sandbox:build": "cd sandbox && ./rebuild.sh",
        "clean": "rm -Rf ./typechain && rm -Rf ./build",
        "test": "npx buidler test",
        "test:coverage": "export COVERAGE=true; npx buidler coverage --network coverage",
        "docs:build": "yarn run build && yarn run solidity-docgen -e cache/solpp-generated-contracts/lib,cache/solpp-generated-contracts/interface,cache/solpp-generated-contracts/upgradeable,cache/solpp-generated-contracts/storage,cache/solpp-generated-contracts/utils -i cache/solpp-generated-contracts -o docs -t docs -H docs/helpers.js",
        "deploy:rinkeby": "DEBUG=* DOTENV_CONFIG_PATH=.env.rinkeby ts-node scripts/deploy.ts",
        "sloc": "rename 's/\\.sol/\\.c/' contracts/*.sol && scc contracts/* --wide --by-file && rename 's/\\.c/\\.sol/' contracts/*.c"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jeffywu/swapnet-lite.git"
    },
    "bugs": {
        "url": "https://github.com/jeffywu/swapnet-lite/issues"
    },
    "homepage": "https://github.com/jeffywu/swapnet-lite#readme",
    "devDependencies": {
        "@nomiclabs/buidler": "^1.3.3",
        "@nomiclabs/buidler-ethers": "^1.1.2",
        "@nomiclabs/buidler-etherscan": "^1.0.1",
        "@nomiclabs/buidler-ganache": "^1.1.2",
        "@nomiclabs/buidler-solhint": "^1.0.2",
        "@nomiclabs/buidler-solpp": "^1.1.1",
        "@nomiclabs/buidler-waffle": "^1.2.0",
        "@types/debug": "^4.1.5",
        "buidler-gas-reporter": "^0.1.3",
        "buidler-typechain": "^0.1",
        "dotenv": "^8.2.0",
        "ethereum-waffle": "^2.4.0",
        "ethers": "^4.0.39",
        "ethlint": "^1.2.5",
        "ganache-cli": "^6.9.0",
        "graphql-request": "^1.8.2",
        "husky": "^4.2.1",
        "prettier": "^1.19.1",
        "prettier-plugin-solidity": "^1.0.0-alpha.38",
        "pretty-quick": "^2.0.1",
        "solidity-coverage": "^0.7.2",
        "solidity-docgen": "^0.5.4",
        "ts-generator": "0.0.8",
        "ts-node": "^8",
        "typechain": "^2.0",
        "@typechain/ethers-v4": "^1.0",
        "@typechain/truffle-v4": "^2.0",
        "@typechain/truffle-v5": "^2.0",
        "@typechain/web3-v1": "^1.0"
    },
    "dependencies": {
        "debug": "^4.1.1"
    },
    "private": true,
    "husky": {
        "hooks": {
            "pre-commit": "solium -d contracts && pretty-quick --staged",
            "pre-push": "npm run test"
        }
    }
}
