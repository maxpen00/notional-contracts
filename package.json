{
  "name": "@swapnet-protocol/contracts",
  "version": "0.0.1",
  "description": "Smart contracts for the Swapnet Lite system",
  "author": "Jeff Wu <jeff@swapnet.finance>",
  "scripts": {
    "compile": "solium -d contracts && npx buidler compile",
    "build": "npm run compile && npx buidler typechain",
    "sandbox:build": "npm run sandbox:down && cd sandbox && ./rebuild.sh",
    "sandbox:down": "docker-compose -f sandbox/docker-compose.yml down",
    "sandbox:up": "npm run sandbox:down && cd sandbox && ./start.sh",
    "clean": "rm -Rf ./typechain && rm -Rf ./build",
    "test": "npx buidler test",
    "test:coverage": "export COVERAGE=true; npm run build && npx buidler coverage --network coverage",
    "docs:build": "solc --userdoc --devdoc cache/solpp-generated-contracts/FutureCash.sol > ./docs/docs.json",
    "subgraph:codegen": "graph codegen -o graph/generated graph/subgraph.yaml",
    "subgraph:build": "graph build -o graph/build graph/subgraph.yaml",
    "subgraph:deploy": "graph deploy --node 'https://api.thegraph.com/deploy/' --ipfs 'https://api.thegraph.com/ipfs/ swapnet-protocol/swapnet-lite ./rinkeby.yaml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeffywu/swapnet-lite.git"
  },
  "bugs": {
    "url": "https://github.com/jeffywu/swapnet-lite/issues"
  },
  "homepage": "https://github.com/jeffywu/swapnet-lite#readme",
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.17.1",
    "@graphprotocol/graph-ts": "^0.17.0",
    "@nomiclabs/buidler": "^1.1.2",
    "@nomiclabs/buidler-ethers": "^1.1.2",
    "@nomiclabs/buidler-etherscan": "^1.0.1",
    "@nomiclabs/buidler-ganache": "^1.1.2",
    "@nomiclabs/buidler-solhint": "^1.0.2",
    "@nomiclabs/buidler-solpp": "^1.1.1",
    "@nomiclabs/buidler-waffle": "^1.2.0",
    "@types/debug": "^4.1.5",
    "buidler-gas-reporter": "^0.1.3",
    "buidler-typechain": "0.0.5",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^2.4.0",
    "ethers": "^4.0.39",
    "ethlint": "^1.2.5",
    "ganache-cli": "^6.9.0",
    "graphql-request": "^1.8.2",
    "husky": "^4.2.1",
    "prettier": "^1.19.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.38",
    "pretty-quick": "^2.0.1",
    "solidity-coverage": "^0.7.2",
    "solidity-docgen": "^0.4.1",
    "ts-generator": "0.0.8",
    "typechain": "^1.0.3",
    "ts-node": "^8",
    "typechain-target-ethers": "^1.0.2",
    "typechain-target-truffle": "^1.0.2",
    "typechain-target-web3-v1": "^1.0.4"
  },
  "dependencies": {
    "debug": "^4.1.1"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "solium -d contracts && pretty-quick --staged",
      "pre-push": "npm run test"
    }
  }
}
